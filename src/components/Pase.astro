<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üéä Iniciando animaciones de pase...");

        // ‚ïê‚ïê‚ïê CONTENEDOR PRINCIPAL ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#pase-container",
            { opacity: 0, scale: 0.9, y: 50 },
            {
                opacity: 1,
                scale: 1,
                y: 0,
                duration: 1,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                }
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO SUPERIOR ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-superior",
            { opacity: 0, y: -20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        // ‚ïê‚ïê‚ïê NOMBRE DEL INVITADO - Letra por letra ‚ïê‚ïê‚ïê
        const textoNombre = "Daniel Maldonado";
        const contenedorNombre = document.getElementById("nombre-invitado").querySelector("h2");
        if (contenedorNombre) {
            contenedorNombre.innerHTML = textoNombre
                .split("")
                .map(
                    (letra, index) =>
                        `<span class="letra-invitado" style="
                            opacity: 0; 
                            display: inline-block; 
                            transform: translateY(20px) scale(0.8);
                            filter: blur(3px);
                        ">${letra === " " ? "&nbsp;" : letra}</span>`
                )
                .join("");

            gsap.to("#nombre-invitado .letra-invitado", {
                opacity: 1,
                y: 0,
                scale: 1,
                filter: "blur(0px)",
                duration: 0.5,
                ease: "power2.out",
                stagger: { each: 0.04, from: "start" },
                delay: 0.6
            });
        }

        // ‚ïê‚ïê‚ïê L√çNEA DECORATIVA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#linea-decorativa",
            { scaleX: 0 },
            {
                scaleX: 1,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 1.2
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO "HEMOS RESERVADO:" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-reservado",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 1.5
            }
        );

        // ‚ïê‚ïê‚ïê N√öMERO DE PASE ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#numero-pase",
            { opacity: 0, scale: 0.3, rotation: -15 },
            {
                opacity: 1,
                scale: 1,
                rotation: 0,
                duration: 1,
                ease: "back.out(2)",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 1.8
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO "PASE(S)" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-pase",
            { opacity: 0, y: 10 },
            {
                opacity: 1,
                y: 0,
                duration: 0.5,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 2.2
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO "EN SU HONOR" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-honor",
            { opacity: 0, y: 10 },
            {
                opacity: 1,
                y: 0,
                duration: 0.5,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#pase-container",
                    start: "top 80%",
                    once: true
                },
                delay: 2.4
            }
        );

        console.log("‚ú® Animaciones de pase completadas!");
    });
</script>

<style>
    /* Efecto hover en letras del nombre */
    .letra-invitado {
        transition: all 0.3s ease;
        will-change: transform, opacity, filter;
        position: relative;
    }

    .letra-invitado:hover {
        transform: translateY(-3px) scale(1.1) !important;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.5) !important;
    }

    /* Transiciones suaves */
    #pase-container {
        transition: all 0.3s ease;
    }

    /* Efecto hover en el n√∫mero */
    #numero-pase:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>