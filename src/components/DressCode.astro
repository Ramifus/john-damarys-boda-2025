<section class="relative bg-[#E8E8E8] w-full mt-10 py-10 px-6 overflow-hidden">
    
    <!-- Hojas decorativas en la esquina superior derecha -->
    <div id="hojas-derecha" class="absolute top-0 right-0 w-20 sm:w-40 md:w-48 z-0">
        <img
            src="/imagenes/hojas.png"
            alt="Hojas decorativas"
            class="w-20 h-auto object-contain scale-x-[-1] opacity-30"
        />
    </div>

    <div class="relative max-w-2xl mx-auto z-10">
        
        <!-- T√≠tulo "C√≥digo de Vestimenta" -->
        <div id="titulo-dress" class="text-center mb-8">
            <h3 class="font-great-vibes text-5xl sm:text-6xl md:text-7xl text-[#6B6B6B] tracking-wide">
                C√≥digo de Vestimenta
            </h3>
        </div>

        <!-- Subt√≠tulo "FORMAL" -->
        <div id="subtitulo-formal" class="text-center mb-6">
            <p class="text-[#6B6B6B] text-base sm:text-lg md:text-xl font-serif uppercase tracking-widest">
                TRAJE FORMAL
            </p>
        </div>

        <!-- Texto: Evitar el color blanco -->
        <div id="texto-evitar" class="text-center">
            <p class="text-[#6B6B6B] text-sm sm:text-base font-serif">
                MUJERES: EVITAR EL COLOR BLANCO
            </p>
        </div>

    </div>

</section>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üëî Iniciando animaciones de c√≥digo de vestimenta...");

        // ‚ïê‚ïê‚ïê HOJAS DECORATIVAS ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#hojas-derecha",
            { opacity: 0, x: 50, y: -50 },
            {
                opacity: 0.3,
                x: 0,
                y: 0,
                duration: 1,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "section",
                    start: "top 80%",
                    once: true
                }
            }
        );

        // ‚ïê‚ïê‚ïê T√çTULO "C√ìDIGO DE VESTIMENTA" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#titulo-dress",
            { opacity: 0, y: -30 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#titulo-dress",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        // ‚ïê‚ïê‚ïê SUBT√çTULO "TRAJE FORMAL" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#subtitulo-formal",
            { opacity: 0, scale: 0.8 },
            {
                opacity: 1,
                scale: 1,
                duration: 0.6,
                ease: "back.out(1.5)",
                scrollTrigger: {
                    trigger: "#subtitulo-formal",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO "EVITAR EL COLOR BLANCO" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-evitar",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#texto-evitar",
                    start: "top 80%",
                    once: true
                },
                delay: 0.9
            }
        );

        console.log("‚ú® Animaciones de c√≥digo de vestimenta completadas!");
    });
</script>

<style>
    /* Efecto hover en t√≠tulo */
    #titulo-dress:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }
</style>