---
// ComponenteCeremonia.astro
---

<section class="relative bg-white w-full py-4 px-6">
    
    <div class="max-w-md mx-auto">
        
        <!-- Tarjeta con borde redondeado -->
        <div 
            id="ceremonia-card"
            class="border-2 border-[#C9A961] rounded-3xl p-8 sm:p-10 bg-white shadow-lg text-center"
        >
            
            <!-- Icono de iglesia -->
            <div id="icono-iglesia" class="mb-6 flex justify-center">
                <div class="w-20 h-20 sm:w-24 sm:h-24 flex items-center justify-center">
                    <img
                        src="/imagenes/iglesia.png"
                        alt="Iglesia"
                        class="w-full h-full object-contain"
                        style="filter: brightness(0) saturate(100%) invert(43%) sepia(8%) saturate(1044%) hue-rotate(49deg) brightness(96%) contrast(88%);"
                    />
                </div>
            </div>

            <!-- T√≠tulo "Ceremonia Religiosa" -->
            <div id="titulo-ceremonia" class="mb-6">
                <h3 class="font-great-vibes text-4xl sm:text-5xl md:text-6xl text-[#C9A961] tracking-wide">
                    Ceremonia Religiosa
                </h3>
            </div>

            <!-- Hora -->
            <div id="hora-ceremonia" class="mb-2">
                <p class="text-[#6B6B6B] text-4xl sm:text-5xl md:text-6xl font-bold font-serif">
                    13:00
                </p>
            </div>

            <!-- Nombre de la iglesia -->
            <div id="nombre-iglesia" class="mb-6">
                <p class="text-[#6B6B6B] text-sm sm:text-base md:text-lg font-serif uppercase tracking-wide">
                    IGLESIA SAN SEBASTI√ÅN
                </p>
            </div>

            <!-- Bot√≥n "VER UBICACI√ìN" -->
            <div id="boton-ubicacion">
                <a
                    href="https://maps.google.com"
                    target="_blank"
                    class="inline-block bg-[#6B7154] text-white px-8 py-3 rounded-lg text-sm sm:text-base font-serif uppercase tracking-wider hover:bg-[#5a5e45] transition-all duration-300 shadow-md hover:shadow-lg"
                >
                    VER UBICACI√ìN
                </a>
            </div>

        </div>

    </div>

</section>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("‚õ™ Iniciando animaciones de ceremonia...");

        // ‚ïê‚ïê‚ïê TARJETA PRINCIPAL ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#ceremonia-card",
            { opacity: 0, scale: 0.8, y: 50 },
            {
                opacity: 1,
                scale: 1,
                y: 0,
                duration: 1,
                ease: "back.out(1.4)",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                }
            }
        );

        // ‚ïê‚ïê‚ïê ICONO DE IGLESIA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#icono-iglesia",
            { opacity: 0, scale: 0.5, rotation: -10 },
            {
                opacity: 1,
                scale: 1,
                rotation: 0,
                duration: 0.8,
                ease: "back.out(1.7)",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        // ‚ïê‚ïê‚ïê T√çTULO "CEREMONIA RELIGIOSA" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#titulo-ceremonia",
            { opacity: 0, y: -20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        // ‚ïê‚ïê‚ïê HORA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#hora-ceremonia",
            { opacity: 0, scale: 0.7 },
            {
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: "back.out(1.5)",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.9
            }
        );

        // ‚ïê‚ïê‚ïê NOMBRE DE LA IGLESIA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#nombre-iglesia",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                },
                delay: 1.2
            }
        );

        // ‚ïê‚ïê‚ïê BOT√ìN "VER UBICACI√ìN" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#boton-ubicacion",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#ceremonia-card",
                    start: "top 80%",
                    once: true
                },
                delay: 1.5
            }
        );

        console.log("‚ú® Animaciones de ceremonia completadas!");
    });
</script>

<style>
    /* Transiciones suaves en la tarjeta */
    #ceremonia-card {
        transition: all 0.3s ease;
    }

    #ceremonia-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    /* Efecto hover en el t√≠tulo */
    #titulo-ceremonia:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    /* Animaci√≥n del bot√≥n */
    #boton-ubicacion a:active {
        transform: scale(0.95);
    }
</style>