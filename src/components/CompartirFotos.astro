<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üì∑ Iniciando animaciones de compartir fotos...");

        // ‚ïê‚ïê‚ïê TARJETA PRINCIPAL ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#fotos-card",
            { opacity: 0, scale: 0.8, y: 50 },
            {
                opacity: 1,
                scale: 1,
                y: 0,
                duration: 1,
                ease: "back.out(1.4)",
                scrollTrigger: {
                    trigger: "#fotos-card",
                    start: "top 80%",
                    once: true
                }
            }
        );

        // ‚ïê‚ïê‚ïê ICONO DE C√ÅMARA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#icono-camara",
            { opacity: 0, scale: 0.5, rotation: -15 },
            {
                opacity: 1,
                scale: 1,
                rotation: 0,
                duration: 0.8,
                ease: "back.out(1.7)",
                scrollTrigger: {
                    trigger: "#fotos-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        // ‚ïê‚ïê‚ïê TEXTO EXPLICATIVO ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#texto-fotos",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#fotos-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        // ‚ïê‚ïê‚ïê BOT√ìN "COMPARTIR FOTOS" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#boton-fotos",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#fotos-card",
                    start: "top 80%",
                    once: true
                },
                delay: 0.9
            }
        );

        // ‚ïê‚ïê‚ïê ANIMACI√ìN DE FLASH EN LA C√ÅMARA ‚ïê‚ïê‚ïê
        // gsap.to("#icono-camara", {
        //     scale: 1.1,
        //     duration: 0.3,
        //     ease: "power2.inOut",
        //     yoyo: true,
        //     repeat: -1,
        //     repeatDelay: 3,
        //     delay: 2
        // });

        console.log("‚ú® Animaciones de compartir fotos completadas!");
    });
</script>

<style>
    /* Transiciones suaves en la tarjeta */
    #fotos-card {
        transition: all 0.3s ease;
    }

    #fotos-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    /* Efecto hover en el icono */
    #icono-camara:hover {
        transform: scale(1.1) rotate(5deg);
        transition: transform 0.3s ease;
    }

    /* Animaci√≥n del bot√≥n */
    #boton-fotos a:active {
        transform: scale(0.95);
    }
</style>