<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        console.log("üéä Iniciando animaciones de padres...");

        // ‚ïê‚ïê‚ïê T√çTULO "CON LA BENDICI√ìN DE DIOS" ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#titulo-bendicion",
            { opacity: 0, y: -30 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#titulo-bendicion",
                    start: "top 80%",
                    once: true
                }
            }
        );

        // ‚ïê‚ïê‚ïê PADRES DEL NOVIO ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#padres-novio h3",
            { opacity: 0, scale: 0.8 },
            {
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: "back.out(1.4)",
                scrollTrigger: {
                    trigger: "#padres-novio",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        gsap.fromTo(
            "#padres-novio .space-y-2 p",
            { opacity: 0, x: -30 },
            {
                opacity: 1,
                x: 0,
                duration: 0.6,
                stagger: 0.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#padres-novio",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        // ‚ïê‚ïê‚ïê PADRES DE LA NOVIA ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#padres-novia h3",
            { opacity: 0, scale: 0.8 },
            {
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: "back.out(1.4)",
                scrollTrigger: {
                    trigger: "#padres-novia",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        gsap.fromTo(
            "#padres-novia .space-y-2 p",
            { opacity: 0, x: 30 },
            {
                opacity: 1,
                x: 0,
                duration: 0.6,
                stagger: 0.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#padres-novia",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        // ‚ïê‚ïê‚ïê PADRINOS ‚ïê‚ïê‚ïê
        gsap.fromTo(
            "#padrinos h3",
            { opacity: 0, scale: 0.8 },
            {
                opacity: 1,
                scale: 1,
                duration: 0.8,
                ease: "back.out(1.4)",
                scrollTrigger: {
                    trigger: "#padrinos",
                    start: "top 80%",
                    once: true
                },
                delay: 0.3
            }
        );

        gsap.fromTo(
            "#padrinos .space-y-2 p",
            { opacity: 0, y: 20 },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                stagger: 0.2,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: "#padrinos",
                    start: "top 80%",
                    once: true
                },
                delay: 0.6
            }
        );

        console.log("‚ú® Animaciones de padres completadas!");
    });
</script>

<style>
    /* Transiciones suaves */
    section h3:hover {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

    section p:hover {
        color: #C9A961;
        transition: color 0.3s ease;
    }
</style>